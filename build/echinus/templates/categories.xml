{% load thumbnail %}
<?xml version="1.0" encoding="UTF-8" ?>
<categories>
    {% for cat in category %}
    <category>
        <name><![CDATA[{{ category.name }}]]></name>
        <slug><![CDATA[{{ category.slug }}]]></slug>
        <pieces>
            {% for piece in category.pieces %}
            <piece>
                {% for image in piece.images %}
                <image src="{% thumbnail image.file 600x510 %}" thumb="{% thumbnail image.file 50x50 crop,upscale %}">
                    <title><![CDATA[{{ image.title }}]]></title>
                    <description><![CDATA[{{ image.description }}]]></description>
                </image>
                {% endfor %}
            </piece>
            {% endfor %}
        </pieces>
    </category>
    {% endfor %}
</categories>
